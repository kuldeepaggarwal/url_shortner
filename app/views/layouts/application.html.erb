<!DOCTYPE html>
<html>
  <head>
    <title>UrlShortner</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="mt10">
      <%= link_to_if user_signed_in?, 'Logout', :destroy_user_session, method: :delete do %>
        <%= link_to 'Login', :new_user_session %>
      <% end %>
      <%= render 'layouts/flash' %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
